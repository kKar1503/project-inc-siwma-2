{
  "name": "project-inc-siwma-2",
  "version": "1.0.0",
  "scripts": {
    "dev": "nx run-many -t dev -p @inc/marketplace @inc/admin",
    "dev:frontend": "nx run-many -t dev -p @inc/marketplace @inc/admin",
    "dev:admin": "nx run @inc/admin:dev",
    "dev:packages": "nx run-many -t dev -p @inc/ui @inc/events @inc/s3-simplified @inc/errors @inc/send-in-blue @inc/utils --parallel=6",
    "dev:marketplace": "nx run @inc/marketplace:dev",
    "test": "nx run-many -t test",
    "build": "nx run-many -t build",
    "build:packages": "nx run-many -t build -p @inc/ui @inc/events @inc/s3-simplified @inc/errors @inc/send-in-blue @inc/utils @inc/db @inc/db-enums --parallel=4",
    "build:db": "nx run @inc/db:build",
    "build:db-enums": "nx run @inc/db-enums:build",
    "build:ui": "nx run @inc/ui:build",
    "build:events": "nx run @inc/events:build",
    "build:s3": "nx run @inc/s3-simplified:build",
    "build:errors": "nx run @inc/errors:build",
    "build:send-in-blue": "nx run @inc/send-in-blue:build",
    "cb": "nx run-many -t clean",
    "ci": "pnpm install --frozen-lockfile",
    "clean": "pnpx rimraf --glob */**/node_modules && pnpx rimraf node_modules",
    "lint": "nx run-many -t lint",
    "postinstall": "pnpm prisma:generate && pnpm enum:copy && echo Please restart your VSCode to make your Prisma Client work.",
    "enum:copy": "nx run @inc/db-enums:copy",
    "prisma:generate": "nx run-many -t prisma:generate -p @inc/db @inc/chat --parallel=2",
    "prisma:fix": "nx run @inc/db:prisma:compile && nx run @inc/db:prisma:patchCasing"
  },
  "author": "Kar",
  "devDependencies": {
    "@types/node": "20.1.4",
    "esbuild": "0.17.19",
    "esbuild-node-externals": "1.7.0",
    "eslint": "8.36.0",
    "nx": "16.1.4",
    "nx-cloud": "16.0.5",
    "symlink-dir": "^5.1.1",
    "sync-directory": "^6.0.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "5.0.2"
  }
}
