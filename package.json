{
  "name": "project-inc-siwma-2",
  "version": "1.0.0",
  "scripts": {
    "build": "nx run-many -t build",
    "build:db": "nx run @inc/db:build",
    "build:errors": "nx run @inc/errors:build",
    "build:events": "nx run @inc/events:build",
    "build:ns": "nx run @inc/node-store",
    "build:packages": "nx run-many -t build -p @inc/ui @inc/events @inc/s3-simplified @inc/errors @inc/send-in-blue @inc/utils @inc/db @inc/node-store @inc/types --parallel=4",
    "build:s3": "nx run @inc/s3-simplified:build",
    "build:sib": "nx run @inc/send-in-blue:build",
    "build:types": "nx run @inc/types:build",
    "build:ui": "nx run @inc/ui:build",
    "build:utils": "nx run @inc/utils:build",
    "ci": "pnpm install --frozen-lockfile",
    "clean": "nx run-many -t clean",
    "clean-nm": "pnpx rimraf --glob */**/node_modules && pnpx rimraf node_modules",
    "dev": "nx run-many -t dev -p @inc/chat @inc/marketplace @inc/admin",
    "dev:admin": "nx run @inc/admin:dev",
    "dev:chat": "nx run @inc/chat:dev",
    "dev:db": "nx run @inc/db:dev",
    "dev:errors": "nx run @inc/errors:dev",
    "dev:events": "nx run @inc/events:dev",
    "dev:marketplace": "nx run @inc/marketplace:dev",
    "dev:ns": "nx run @inc/node-store:dev",
    "dev:s3": "nx run @inc/s3-simplified:dev",
    "dev:sib": "nx run @inc/send-in-blue:dev",
    "dev:types": "nx run @inc/types:dev",
    "dev:ui": "nx run @inc/ui:dev",
    "dev:utils": "nx run @inc/utils:dev",
    "lint": "nx run-many -t lint --parallel=4",
    "lint:apps": "nx run-many -t lint -p @inc/chat @inc/marketplace @inc/admin",
    "lint:packages": "nx run-many -t lint -p @inc/ui @inc/events @inc/s3-simplified @inc/errors @inc/send-in-blue @inc/utils @inc/db @inc/node-store @inc/types --parallel=4",
    "postinstall": "pnpm --filter db prisma:generate && echo Please restart your VSCode to make your Prisma Client work.",
    "prisma:fix": "nx run @inc/db:prisma:compile && nx run @inc/db:prisma:patchCasing",
    "test": "nx run-many -t test"
  },
  "author": "Yam Kar Lok",
  "devDependencies": {
    "@types/node": "18.15.3",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "esbuild": "0.18.4",
    "esbuild-node-externals": "1.7.0",
    "eslint": "8.36.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "8.7.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "nx": "16.1.4",
    "nx-cloud": "16.0.5",
    "symlink-dir": "^5.1.1",
    "sync-directory": "^6.0.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "5.0.2"
  }
}