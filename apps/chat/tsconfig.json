  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "emitDeclarationOnly": true,
    "outFile": "./dist/index.d.ts"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "esbuild.config.js"]
}
