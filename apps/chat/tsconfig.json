{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "esbuild.config.js"]
}
