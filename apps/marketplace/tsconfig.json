{
  "extends": "@inc/configs/tsconfig.app.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api/*": [
        "./src/pages/api/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
