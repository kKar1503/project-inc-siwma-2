{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "./dist",
  },
  "paths": {
    "@/*": ["./src/*"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
