{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "CommonJS",
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "esbuild.config.js"]
}
